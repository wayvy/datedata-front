{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["vite/client", "node"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": [
    "src/**/*",
    "vite.config.ts"
  ]
}
